{
    "name": "ericrorich/ai-interview-widget",
    "description": "Interactive AI widget for Eric Rorich's portfolio with voice capabilities and WordPress/Elementor integration",
    "type": "wordpress-plugin",
    "version": "2.0.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Eric Rorich",
            "email": "eric@ericrorich.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpstan/phpstan": "^1.10",
        "phpmd/phpmd": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "EricRorich\\AIInterviewWidget\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EricRorich\\AIInterviewWidget\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs --standard=phpcs.xml.dist",
        "phpcs-fix": "phpcbf --standard=phpcs.xml.dist",
        "phpstan": "phpstan analyse --configuration=phpstan.neon.dist",
        "phpmd": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
        "lint": [
            "@phpcs",
            "@phpstan",
            "@phpmd"
        ],
        "fix": [
            "@phpcs-fix"
        ],
        "build": [
            "@lint",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "wordpress-install-dir": "/tmp/wordpress",
        "wordpress-content-dir": "/tmp/wordpress/wp-content"
    }
}